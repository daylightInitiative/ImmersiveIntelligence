{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "Particle class name",
      "enum": ["ParticleVanilla", "ParticleModel", "ParticleBasicGravity", "ParticleDebris"]
    },
    "models": {
      "type": "array",
      "description": "3D models used by this particle",
      "items": {
        "type": "string"
      }
    },
    "max_lifetime": {
      "description": "Maximum life time of this particle in ticks",
      "type": "integer"
    },
    "lifetime": {
      "description": "Starting life time of this particle in ticks",
      "type": "integer"
    },
    "draw_stage": {
      "description": "Draw stage of this particle, alters visual effects",
      "type": "string",
      "enum": [
        "vanilla", "vanilla_additive", "color_only_additive",
        "custom", "custom_additive", "custom_smoke_noise_shader",
        "custom_solid"
      ]
    },
    "programs": {
      "type": "array",
      "description": "Names of animation programs used by this particle, see IIParticles for details.",
      "items": {
        "type": "string"
      }
    },
    "aabb": {
      "description": "Radius of the bounding box of this particle",
      "type": "number"
    },
    "properties": {
      "description": "Additional properties of this particle",
      "type": "object"
    },
    "dynamic_properties": {
      "description": "Dynamically assigned properties of this particle",
      "type": "object"
    },
    "scheduled": {
      "description": "Particles scheduled to be spawned by this one after a time delay",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "time": {
            "type": "integer"
          },
          "generator": {
            "type": "string",
            "enum": [
              "same",
              "rand_xz",
              "circle_xz",
              "cone_xz",
              "cone_xy",
              "cone_zy",
              "sphere",
              "square",
              "star",
              "orb",
              "cube"
            ]
          },
          "type": {
            "type": "string"
          },
          "size": {
            "type": "number"
          },
          "amount": {
            "type": "integer",
            "minimum": 0
          },
          "min_amount": {
            "type": "integer",
            "minimum": 0
          },
          "max_amount": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": ["time", "generator", "distance", "type"],
        "oneOf": [
          {
            "required": ["amount"]
          },
          {
            "required": ["min_amount", "max_amount"]
          }
        ]
      }
    },
    "chained": {
      "type": "array",
      "description": "Particles spawned after death of this one"
    }
  },
  "required": ["type", "max_lifetime", "draw_stage"]
}